##Barplots of joined samples with error bars
reads_info_mean_sd <- read.csv("reads_info_mean_sd.csv")
reads_info_mean_sd$variable<-factor(reads_info_mean_sd$variable, levels=c("Raw", "Filtered", "Assigned to species", "After human removal"))
all_barcodes_mean_sd<-ggplot(reads_info_mean_sd, aes(x=factor(variable), y=mean, fill=factor(variable)))+
  geom_col(position="dodge", width=0.7) +
  geom_errorbar(aes(ymin=mean-sd, ymax=mean+sd), width=0.2, position=position_dodge(0.9))+
  theme_minimal() +
  labs(fill="Filtering steps", y="Number of reads", x="Filtering steps") +
  scale_fill_manual(values=pal_mean_sd) +
  scale_x_discrete(limits=c("Raw", "Filtered", "Assigned to species", "After human removal")) +
  scale_y_continuous(labels=scales::comma)
