venn.diagram(
  x=list(eDNA1,haul1),
  category.names = c("eDNA", "Fishing"),
  filename = '#1_venn_diagram.png',
  output=TRUE,
  imagetype="png",
  heught = 400 ,
  width = 3200 ,
  resolution = 300 ,
  col=c("#8015B7","#1165A0"),
  fill = c("#CA7FF1","#6BB9EF"),
  alpha = 0.30,
  main = "Haul 1",
  main.fontface = "bold",
  main.fontfamily = "serif",
  main.cex = 3,
  main.pos = c(0.5,0.9),
  print.mode=c("raw","percent"),
  cex = 3,
  fontfamily = "serif",
  fontface = "bold",
  cat.cex = 2.5,
  cat.fontface = "bold",
  cat.fontfamily = "serif",
  cat.default.pos = "outer",
  cat.pos = c(150, 230),
  cat.dist = c(0.04, 0.05),
  inverted = TRUE)

